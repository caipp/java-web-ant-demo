<?xml version="1.0" encoding="UTF-8"?>
<web-app>
  <!--注册Servlet-->
  <servlet>
  <!--Srevlet的注册名-->
  <servlet-name>demoServlet</servlet-name>
  <!--servlet所在的全类名-->
  <servlet-class>com.rzy.web.servlet.DemoServlet</servlet-class>
  </servlet>
  <!--映射servlet-->
  <servlet-mapping>
    <!--与之前的Servlet注册名一直，以此来映射-->
    <servlet-name>demoServlet</servlet-name>
    <!--url映射路径，表示/demo路径下demo文件跳转到DemoServlet类处理-->
    <url-pattern>/demo</url-pattern>
  </servlet-mapping>

<servlet>
    <servlet-name>resultServlet</servlet-name>
    <servlet-class>com.rzy.web.servlet.ResultServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>resultServlet</servlet-name>
    <!--url映射路径，表示/demo路径下result文件跳转到ResultServlet类处理-->
    <url-pattern>/result</url-pattern>
  </servlet-mapping>
</web-app>